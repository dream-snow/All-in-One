
config globals
	option workgroup 'WORKGROUP'
	option description 'Ksmbd on OpenWrt'
	option enabled '1'

config share
	option browseable 'yes'
	option force_root '1'
	option guest_ok 'yes'
	option create_mask '0666'
	option dir_mask '0777'
	option read_only 'no'
	option inherit_owner '1'
	option name 'smb://192.168.20.117/'
	option path '/mnt/'

